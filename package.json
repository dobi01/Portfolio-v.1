{
  "name": "portfolio-v.1",
  "version": "1.0.0",
  "description": "Dobi Okrasa portfolio - junior front-end developer",
  "main": "index.js",
  "scripts": {
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdir css sass vendor img js",
    "init:files": "touch index.html sass/style.scss css/style.css js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    
    "build": "npm-run-all build:* && npm run test",
    "build:rimraf": "rimraf css/*",
    "build:sass": "node-sass --output-style compact sass/style.scss css/style.css",
    "build:autoprefixer": "autoprefixer-cli -o css/style.prefixed.css css/style.css",
    "build-dev:sass": "node-sass --output-style expanded -o css/style.css sass/style.scss --source-map true",
    
    "watch": "npm-run-all build:* && run-p watch:*",
    "watch:sass": "node-sass --output-style expanded sass/style.scss css/style.css --watch --source-map true",
    "watch:autoprefixer": "onchange -d 100 css/style.css -- autoprefixer-cli -o css/style.prefixed.css css/style.css",
    "watch:browser-sync": "browser-sync start --server --files \"css/*.css\" \"*.html\" ",
    
    "test": "npm run test:html",
    "test:html": "globstar nu-html-checker *.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dobi01/Portfolio-v.1.git"
  },
  "author": "Dobi Okrasa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dobi01/Portfolio-v.1/issues"
  },
  "homepage": "https://github.com/dobi01/Portfolio-v.1#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.6",
    "globstar": "^1.0.0",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "onchange": "^4.1.0",
    "rimraf": "^2.6.2"
  }
}
